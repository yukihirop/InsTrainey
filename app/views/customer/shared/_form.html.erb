<div class="content content-without-top-padding">
  <div class="content content-with-background-image">
    <div class="container">

      <div class="login-signup">


        <div class="row">
          <!--col-sm-6-->
          <div class="nav-tab-holder">
            <ul class="nav nav-tabs row" role="tablist">
              <li role="presentation" id="sign_up" class="active">
                <a href="#home" aria-controls="home" role="tab" data-toggle="tab">新規登録</a>
              </li>
              <li role="presentation" id="login">
                <a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">ログイン</a></li>
            </ul>
          </div>

        </div>


        <div class="tab-content">
          <div role="tabpanel" class="tab-pane active" id="home">
            <div class="row">

              <div class="mobile-pull">
                <article role="login">
                  <h3 class="text-center"><i class="fa fa-lock"></i> 新規登録</h3>

                  <%= form_for @form, url: :customer_sign_up,
                               html: {id: nil ,class:'signup',method:'post'} do |f| %>
                      <div class="form-group">
                        <%= f.text_field :customer_name, :placeholder => " User Name" %>
                      </div>
                      <div class="form-group">
                        <%= f.email_field :email, :placeholder => " Email Address" %>
                      </div>
                      <div class="form-group">
                        <%= f.password_field :password, :placeholder => " Password" %>
                      </div>
                      <div class="form-group">
                        <%= f.password_field :confirm_password, :placeholder => " ConfirmPassword" %>
                      </div>
                      <div class="form-group">
                        <div class="checkbox">
                          <label>
                            <input type="checkbox"> アカウントを作成することで<%= link_to '利用規約','#' %>に同意したことになります。
                          </label>
                        </div>
                      </div>
                      <div class="form-group">
                        <%= f.submit '新規登録', :class => 'btn btn-success btn-block' %>
                      </div>
                  <% end %>

                </article>
              </div>

            </div>
            <!-- end of row -->
          </div>
          <!-- end of home -->

          <div role="tabpanel" class="tab-pane" id="profile">
            <div class="row">

              <div class="mobile-pull">
                <article role="login">
                  <h3 class="text-center"><i class="fa fa-lock"></i> ログイン</h3>

                  <%= form_for @form, url: :customer_login,
                               html: {id: nil ,class:'signup',method:'post'} do |f| %>
                      <div class="form-group">
                        <%= f.email_field :email, :placeholder => " Email Address" %>
                      </div>
                      <div class="form-group">
                        <%= f.password_field :password, :placeholder => " Password" %>
                      </div>
                      <div class="form-group">
                        <%= f.submit 'ログイン', :class => 'btn btn-success btn-block' %>
                      </div>
                  <% end %>

                </article>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
