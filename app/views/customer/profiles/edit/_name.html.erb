<div class="page-header">
  <h1>名前の編集</h1>
</div>
<%= form_for @customer, url: :customer_profile, html: {class: 'name', method: :patch}, data: {remote: true} do |f| %>
    <%= hidden_field_tag "edit_type", "name" %>
    <div class="form-group name">
      <%= f.label :name, '名前', class:'required' %>
      <%= f.text_field :name %>
    </div>
    <div class="form-group name_kana">
      <%= f.label :name_kana, '名前(カタカナ)' %>
      <%= f.text_field :name_kana %>
    </div>
    <div class="form-actions">
      <%= f.submit '更新', class:'btn btn-default btn-primary' %>
      <%= link_to 'キャンセル', :customer_profile %>
    </div>
<% end %>
