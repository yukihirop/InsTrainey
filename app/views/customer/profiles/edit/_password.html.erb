<div class="page-header">
  <h1>パスワードの編集</h1>
</div>
<%= form_for @profile_form, url: :customer_profile, html: {class: 'password', method: :patch}, data: {remote: true} do |f| %>
    <%= hidden_field_tag "edit_type", "password" %>
    <div class="form-group current_password">
      <%= f.label :current_password, '現在のパスワード' %>
      <%= f.password_field :current_password %>
    </div>
    <div class="form-group password">
      <%= f.label :new_password, '新しいパスワード' %>
      <%= f.password_field :new_password %>
    </div>
    <div class="form-group confirm_password">
      <%= f.label :new_password_confirmation, '確認のためもう一度入力' %>
      <%= f.password_field :new_password_confirmation %>
    </div>
    <div class="form-actions">
      <%= f.submit 'パスワードを変更', class:'btn btn-default btn-primary' %>
      <%= link_to 'キャンセル', :customer_profile %>
    </div>
<% end %>
